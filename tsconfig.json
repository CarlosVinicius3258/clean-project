{
  "compileOnSave": true,
  "compilerOptions": {
    "jsx": "react",
    "target": "es6",
    "lib": ["DOM", "ES6", "DOM.Iterable", "ScriptHost", "ES2016.Array.Include"],
    "esModuleInterop": true,
    "baseUrl": ".",
    "noImplicitAny": true,
    "paths": {
      "@/*": ["src/*"]
    },
    "outDir": "./dist",
    "module": "commonjs",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true
  },
  "include": ["./src/**/*"]
}
